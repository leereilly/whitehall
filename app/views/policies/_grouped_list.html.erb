<div class="alphabetical_list g3">
  <h1>A-Z Listing</h1>
  <% policies.group_by {|t| t.title.first.upcase }.sort.in_groups_of(3, false) do |row| %>
    <div class="group alphabetical_row">
      <% row.each do |letter, policies_group| %>
        <div class="alphabetical_group" id="policies_<%= letter.downcase %>">
          <h2><%= letter %></h2>
          <%= render partial: "list", locals: { policies: policies_group } %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
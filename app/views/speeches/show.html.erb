<div class="g2">
  <section class="document_view">
    <h1 class="title"><%= @document.title %></h1>
    <div class="body">
      <%= govspeak_to_html @document.body %>
    </div>
    <p class="details">
      <span class="type"><%= @document.speech_type.name %></span> for speech delivered by <span class="ministerial_role"><%= link_to @document.role_appointment.role, @document.role_appointment.role %></span> on <span class="delivered_on"><%= @document.delivered_on.to_s(:long_ordinal) %></span> at <span class="location"><%= @document.location %></span>
    </p>
  </section>
</div>

<div class="g1 secondary">
  <%= render partial: 'related_policies', object: @related_policies %>

  <%= render partial: 'countries', locals: { countries: @document.countries } %>
</div>

<div class="g3 policy_area_view">
  <h1 class="page_title">Policy area</h1>

  <div class="g3 policy_area_overview group">
    <section class="policy_area">
      <%= content_tag_for :article, @policy_area do %>
        <h1 class="page_title name"><%= @policy_area.name %></h1>
        <nav class="meta">
          <% if @policy_area.organisations.any? %>
            <% @policy_area.organisations.each do |organisation| %>
              <%= link_to organisation.name, organisation_path(organisation), class: "organisation", id: dom_id(organisation) %>
            <% end %>
          <% else %>
            <span>No organisations associated</span>
          <% end %>
        </nav>
        <div class="description"><%= govspeak_to_html @policy_area.description %></div>
      <% end %>
    </section>

    <%= render partial: "documents/recently_changed_documents", object: @recently_changed_documents[0...5] %>
  </div>

  <div class="g3 related_content group<%= @featured_policies.any? ? "" : " no_featured" %>">
    <% if @featured_policies.any? %>
      <div class="g3 priority_policies">
        <section>
          <h1 class="section_title">Current priorities</h1>
          <ul class="featured policies<%= @featured_policies.count > 6 ? " half_columns" : "" %>">
            <% @featured_policies.each do |policy| %>
              <%= content_tag_for :li, policy, class: "featured_policy" do %>
                <div class="inner">
                  <div class="img"><%= image_tag "evil_placeholder.png", alt:"Image for #{policy.title}" %></div>
                  <%= link_to policy.title, public_document_path(policy), title: "View #{policy.title}" %>
                </div>
              <% end %>
            <% end %>
          </ul>
        </section>
      </div>
    <% end %>

    <div class="g2 all_policies collection">
      <%= render partial: "documents/policies", object: @policies, locals: {title: "What we're doing"} %>
    </div>

    <div class="g1 collection last">
      <%= render partial: "related_policy_areas", object: @related_policy_areas %>
    </div>

  </div>
</div>

<section class="alphabetical_list g3">
  <h1>A-Z Listing</h1>
  <% policy_areas.group_by {|t| t.name.first.upcase }.sort.in_groups_of(3, false) do |row| %>
    <div class="group alphabetical_row">
      <% row.each do |letter, policy_area_group| %>
        <div class="alphabetical_group" id="policy_areas_<%= letter.downcase %>">
          <h2><%= letter %></h2>
          <%= render partial: "list", locals: { policy_areas: policy_area_group } %>
        </div>
      <% end %>
    </div>
  <% end %>
</section>